{
  "manifest_version": 3,
  "name": "店小秘助手",
  "version": "1.0",
  "description": "显示库存",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "64": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.dianxiaomi.com/order/*"
      ]
    }
  ],
  "permissions": ["webRequest"]
}
